<!-- controls which add form to use-->
<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <button type="button" class="btn btn-secondary" id="btn-poke"> Pokemon </button>
    </div>
    <div class="col-sm-3">
      <button type="button" class="btn btn-secondary"id="btn-type"> Types </button>
    </div>
    <div class="col-sm-3">
      <button type="button" class="btn btn-secondary"id="btn-move"> Moves </button>
    </div>
    <div class="col-sm-3">
      <button type="button" class="btn btn-secondary"id="btn-location"> Locations </button>
    </div>
  </div>
</div>

<!-- html for each pokemon looks like this -->
<div id="container-poke" class="container poke-list change-form">

  <!-- options to sort by -->
  <div class="row">
    <div class="col-sm-12">
      Sort by: 
      <select id="dropdown" name="category">
       <option value="name" selected>Name</option>
       <option value="attack">Attack</option>
       <option value="defense">Defense</option>
       <option value="health">Health</option>
       <option value="speed">Speed</option>
      </select> 
      <select id="sortBy" name="category">
       <option value="ASC" selected>Ascending</option>
       <option value="DESC">Descending</option>
      </select> 
      <button id="sortBtn" class="btn btn-primary">Sort</button>
    </div>
  </div>
  
  {{#each pokemon}}
  <div class="row striped">
    <div class="col-sm-12">
      <span class="poke-header"> <strong>{{this.name}}</strong> </span>
    </div>

    <!-- Statistics and Evolutions here-->
    <div class="col-sm-3">
      <span class="poke-header"> Statistics </span>
      <ul>
        <li> Attack: {{this.attack}}</li>
        <li> Defense: {{this.defense}}</li>
        <li> Health: {{this.health}}</li>
        <li> Speed: {{this.speed}}</li>
        <li> Evolves from: {{this.evolves_from}} </li>
        <li> Evolves to: {{this.evolves_to}} </li>
      </ul>
    </div>

    <!-- Types go here-->
    <div class="col-sm-3">
      <!---<img class= "img-fluid" src="images/charizard.png" style="width:250px">-->
      <span class="poke-header"> Types </span>
      <ul class="type-list">
      {{#each types}}
        <li> {{this}}</li>
      {{/each}}
      </ul>
    </div>

    <!-- Moves go here-->
    <div class="col-sm-3">
      <span class="poke-header"> Moves </span>
      <ul>
        {{#each moves}}
        <li> {{this.name}} -- {{this.level}} </li>
        {{/each}}
      </ul>
    </div>

    <!-- Locations go here-->
    <div class="col-sm-3">
      <span class="poke-header"> Locations </span>
      <ul>
        {{#each locations}}
          <li> {{this}} </li>
        {{/each}}
      </ul>
    </div>
  </div>
  {{/each}}
</div>

<!-- Type information here -->
<div id="container-type" class="container change-form"style="display:none;">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Weak Against</th>
        <th scope="col">Strong Against</th>
      </tr>
    </thead>
    <tbody>
      {{#each typeRelations}}
      <tr value="{{this.id}}">
        <td> {{this.name}} </td>
        <td> 
          <ul>
          {{#each weak_against}}
          <li value="{{this.id}}"> {{this.name}}</li>
          {{/each}}
          </ul>
        </td>
        <td> 
          <ul>
          {{#each strong_against}}
          <li value="{{this.id}}"> {{this.name}}</li>
          {{/each}}
          </ul>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Move information here -->
<div id="container-move" class="container change-form" style="display:none;">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Status Effect</th>
      </tr>
    </thead>
    <tbody>
      {{#each moves}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.status_effect}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Location information here -->
<div id="container-location" class="container change-form" style="display:none;">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Description </th>
      </tr>
    </thead>
    <tbody>
      {{#each locations}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.description}} </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<script src="js/update.js"></script>
