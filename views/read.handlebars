<!-- html for each pokemon looks like this -->
<div id="container-poke" class="container poke-list change-form">

  <!-- options to sort by -->
  <div class="row">
    <div class="col-sm-12">
      Sort by: 
      <select name="category">
       <option value="name">Name</option>
       <option value="name">Attack</option>
       <option value="name">Defense</option>
       <option value="name">Health</option>
       <option value="type">Type</option>
       <option value="move">Move</option>
       <option value="location">Location</option>
      </select> 
    </div>
  </div>
  
  {{#each pokemon}}
  <div class="row striped">
    <!-- Name, picture, and types go here-->
    <div class="col-sm-3">
      <span class="poke-header"> {{this.name}} </span>
      <!---<img class= "img-fluid" src="images/charizard.png" style="width:250px">-->
      <ul class="type-list">
      {{#each types}}
        <li> {{this}}</li>
      {{/each}}
      </ul>
    </div>

    <!-- Statistics and Evolutions here-->
    <div class="col-sm-3">
      <span class="poke-header"> Statistics </span>
      <ul>
        <li> Attack: {{this.attack}}</li>
        <li> Defense: {{this.defense}}</li>
        <li> Health: {{this.health}}</li>
        <li> Speed: {{this.speed}}</li>
        <li> Evolves from: {{this.evolves_from}} </li>
        <li> Evolves to: {{this.evolves_to}} </li>
      </ul>
    </div>

    <!-- Moves go here-->
    <div class="col-sm-3">
      <span class="poke-header"> Moves </span>
      <ul>
        {{#each moves}}
          <li> {{this.name}} -- {{this.level}} </li>
        {{/each}}
      </ul>
    </div>

    <!-- Locations go here-->
    <div class="col-sm-3">
      <span class="poke-header"> Locations </span>
      <ul>
        {{#each locations}}
          <li> {{this}} </li>
        {{/each}}
      </ul>
    </div>
  </div>
  {{/each}}
</div>
  
<!-- Type information here -->
<div id="container-type" class="container change-form"style="display:none;">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Weak Against</th>
        <th scope="col">Strong Against</th>
      </tr>
    </thead>
    <tbody>
      {{#each types}}
      <tr>
        <td> {{this.name}} </td>
        <td> {{this.weak}} </td>
        <td> {{this.strong}} </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Move information here -->
<div id="container-move" class="container change-form" style="display:none;">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each moves}}
      <tr>
        <td>{{this}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Location information here -->
<div id="container-location" class="container change-form" style="display:none;">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Description </th>
      </tr>
    </thead>
    <tbody>
      {{#each locations}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.description}} </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

